				<th>รายละเอียด</th>
				<th>ราคา</th>
			</tr>
			<c:forEach var="pro" items="${listproduct.rows}">
				<tr>
					<td><c:out value="${pro.pid}" /></td>
					<td><c:out value="${pro.pname}" /></td>
					<td><c:out value="${pro.pdetail}" /></td>
					<td><c:out value="${pro.price}" /></td>
				</tr>
			</c:forEach>
